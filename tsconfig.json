{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "cypress"
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@type/*": [
        "src/type/*"
      ],
      "@constants": [
        "src/constants"
      ],
      "@icons/*": [
        "src/assets/icons/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
